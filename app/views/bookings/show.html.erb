<% if  @flat.photo.attached?%>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @flat.photo.key %>'); background-size: cover;">
      <div class="container">
        <h2 class='text-center' style="color:white; text-shadow: 0 0 10 rgba(0, 0, 0, 0.5); text-border: 2px solid black"><%= @flat.title %></h2>
      </div>
    </div>
  <% else %>
    <h2 class='text-center'><%= @flat.title %></h2>
  <% end %>


<div class="text-center mt-5">
  <p>Adresse de l'appartement : <%= @flat.address %></p>
  <br>
  <h3>Statut de la réservation</h3>
  <p><%= @booking.status %> par le propriétaire de l'appartement !</p>
  <br>
  <h3>Détails de ma réservation</h3>
  <p>Date d'arrivée : <%= @booking.starting_date %></p>
  <p>Date de départ : <%= @booking.ending_date %></p>
  <p>Nombre d'occupants : <%= @booking.number_of_occupants %> Personnes</p>
  <p>Prix Total : <%= @booking.total_price %> €</p>
    <% if @booking.user == current_user %>
    <%= link_to 'delete', booking_path(@booking), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-dark" %>
  <% end %>
  <% if @booking.user == current_user %>
    <%= link_to 'edit', edit_booking_path(@booking), class:"btn btn-dark" %>
  <% end %>
  <%= link_to 'back', dashboard_path, class:"btn btn-dark" %>
</div>
