<div class="container text-center p-2" style='width: 400px; margin: 12px auto' >
<h1>Mettre à jour les données de mon appartement</h1>

<br>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :title, label: "Titre"%>
  <%= f.input :description, label: "Quelques mots sur votre appartement" %>
  <%= f.input :address, label: "Adresse" %>
  <%= f.input :capacity, label: "Capacité d'accueil" %>
  <%= f.input :price_per_day, label: "Prix par nuit" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit 'Mettre à jour', class:"btn btn-dark" %>
<% end %>
</div>
