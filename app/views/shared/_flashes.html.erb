<% if notice %>
<div class="flash flash-success alert alert-dismissible fade show" role="alert">
  <% if signed_in? %>
  <span><strong> Bravo! </strong> 🎉 vous êtes connecté !  </span>
  <% else %>
  <span><strong> Bravo! </strong> 🎉 vous êtes déconnecté !  </span>
  <% end %>
  <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
<% end %>

<% if alert %>
<div class="flash flash-warning alert alert-dismissible fade show" role="alert">
  <span><strong>Mmh</strong> 🤔 il manque quelque chose dans votre profil.</span>
  <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
<% end %>

